<Window x:Class="panzitzoom.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:panzitzoom"
        mc:Ignorable="d"
        Title="Login" Height="329.4" Width="305.6" FontSize="14" Background="#04c582">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20,20,9.6,-8.4">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White"/>
            <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Password" Foreground="White"/>
            <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Button x:Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="60,10,59.6,10" Background="#545d6a" Foreground="White" FontSize="18"/>
            <Label Content="Register" Foreground="White" HorizontalContentAlignment="Center" MouseLeftButtonUp="Label_MouseLeftButtonUp" />
        </StackPanel>
    </Border>
</Window>
